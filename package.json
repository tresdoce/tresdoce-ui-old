  "bugs": {
    "url": "https://github.com/tresdoce/tresdoce-ui/issues"
  },
  "homepage": "https://github.com/tresdoce/tresdoce-ui#readme",
  "license": "MIT",
  "scripts": {
    "start": "npm run storybook",
    "storybook": "start-storybook -p 6006 -s ./packages/brand/assets",
    "test": "lerna exec --no-bail npm run test",
    "lint": "lerna exec --no-bail npm run lint",
    "clear": "lerna exec --no-bail npm run clear",
    "build": "lerna exec --no-bail npm run build",
    "publish": "lerna exec npm publish",
    "bootstrap": "lerna bootstrap",
    "hoist-deps": "lerna clean -y && lerna bootstrap --hoist",
    "create:storybook": "npm-run-all -l -c -s clear:storybook build:storybook",
    "clear:storybook": "rimraf ./dist",
    "build:storybook": "build-storybook -o ./dist/storybook-tresdoce-ui"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --ext .ts,.tsx,.js,.jsx",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": "@tresdoce-toolkit"
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "semi": true,
    "tabWidth": 2,
    "printWidth": 100
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "styled-components": "^5.1.1"
  },
  "resolutions": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@babel/plugin-transform-modules-commonjs": "^7.13.8",
    "@babel/preset-env": "^7.13.12",
    "@mdx-js/loader": "^1.6.22",
    "@storybook/addon-a11y": "^6.2.7",
    "@storybook/addon-actions": "^6.2.8",
    "@storybook/addon-backgrounds": "^6.2.7",
    "@storybook/addon-controls": "^6.2.7",
    "@storybook/addon-docs": "^6.2.8",
    "@storybook/addon-essentials": "^6.2.7",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-knobs": "^6.2.7",
    "@storybook/addon-links": "^6.2.8",
    "@storybook/addon-notes": "^5.3.21",
    "@storybook/addon-storysource": "^6.2.7",
    "@storybook/addon-toolbars": "^6.2.7",
    "@storybook/addon-viewport": "^6.2.7",
    "@storybook/addons": "^6.2.7",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.2.7",
    "@storybook/theming": "^6.2.7",
    "@tresdoce-toolkit/eslint-config": "^1.0.0",
    "@types/react": "^17.0.3",
    "@types/storybook__react": "^5.2.1",
    "@types/styled-components": "^5.1.9",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.2.2",
    "babel-plugin-react-docgen": "^4.2.1",
    "babel-plugin-styled-components": "^1.12.0",
    "babel-preset-react-app": "^10.0.0",
    "css-loader": "^5.2.0",
    "file-loader": "^6.2.0",
    "identity-obj-proxy": "^3.0.0",
    "less": "^4.1.1",
    "less-loader": "^8.0.0",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^5.2.0",
    "prettier": "^2.1.0",
    "react": "^17.0.2",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
